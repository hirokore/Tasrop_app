<% if current_user.admin? %>
  <h1>管理者ページ</h1>
  <table>
    <th>表示名</th>
    <th>メルアド</th>
    <th>管理者権限</th>
    <th></th>
  </table>
<% else %>
  <h1>DMページ</h1>
<% end %>

<h2>相互フォローリスト</h2>


<th>メルアド</th>
<% @users.each do | user |%>
  <tr>
    <td><%= user.email %></td>
    <td><%= user.email if not user.admin? %></td>
    <td>
      <%= form_with(model: current_user.active_relationships.build(followed_id: user.id))  do |f| %>
        <%= f.hidden_field :followed_id %>
        <%= f.submit "フォロー" %>
      <% end %>
    </td>
  </tr>
<% end %>