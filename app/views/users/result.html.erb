<h1>検索結果</h1>
<hr>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |user| %>
      <tr>
        <td width=70%><%= user.name %></td>
        <% if current_user != user %>
          <td width=30%, align=center><%= render 'follow_form', user: user %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('devise.shared.links.back'), :back %>
