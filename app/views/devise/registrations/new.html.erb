<div class="container">
  <div class="row">
    <div class="form-wrapper col-xs-5 col-sm-6 col-md-6 col-lg-5">
      <h2 style="text-align:center;">新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field " >
          <%= f.label "お名前" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="field">
          <%= f.hidden_field :name_tag, autofocus: true, autocomplete: "name_tag", value: rand(1..9999) %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <hr>
        <div class="button-panel">
          <%= f.submit t('.sign_up'), {class: "button" } %>
        </div>
        <br>
      <% end %>
    </div>
    <div class="form-wrapper col-xs-5 col-sm-6 col-md-6 col-lg-5">
      <h2 style="text-align:center;">SNSログイン</h2><br>
      <div class="field">
        <%= render "devise/shared/links" %>
      </div>
      <hr>
      <h2 style="text-align:center;">ゲストログイン</h2><br>
      <div class="field">
        <%= link_to 'ログイン', users_guest_sign_in_path, method: :post %>
      </div>
    </div>
  </div>
</div>